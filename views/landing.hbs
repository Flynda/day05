<form method="POST" action="/">
    <h2>News Search</h2>
    <hr>
    <div class="form-group">
        <input type="text" name="search" id="search" class="form-control" placeholder="Enter search term here" required>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="us" class="form-check-input" value="us" required>
                <label for="us" class="form-check-label">
                    <img src="/flags/us.png" alt="us">
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="uk" class="form-check-input" value="uk">
                <label for="uk" class="form-check-label">
                    <img src="/flags/uk.png" alt="us">
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="fr" class="form-check-input" value="fr">
                <label for="fr" class="form-check-label">
                    <img src="/flags/fr.png" alt="us">
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="sg" class="form-check-input" value="sg">
                <label for="sg" class="form-check-label">
                    <img src="/flags/sg.png" alt="us">
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="jp" class="form-check-input" value="jp">
                <label for="jp" class="form-check-label">
                    <img src="/flags/jp.png" alt="us">
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-check">
                <input type="radio" name="country" id="cn" class="form-check-input" value="cn">
                <label for="cn" class="form-check-label">
                    <img src="/flags/cn.png" alt="us">
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="category"></label>
        <select name="category" id="category" class="form-control">
            <option value="business">Business</option>
            <option value="entertainment">Entertainment</option>
            <option value="general">General</option>
            <option value="health">Health</option>
            <option value="science">Science</option>
            <option value="sports">Sports</option>
            <option value="technology">Technology</option>
        </select>
    </div>

    <button type="submit">Search</button>

</form>